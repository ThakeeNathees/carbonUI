Import('env')

SOURCES = [
	Glob('ImGuiColorTextEdit/*.cpp'),
]

## glfw dependencies
env.Append(LIBS=['X11'])

## compile libs
SConscript('glad/SConstruct')
SConscript('glfw/SConstruct')
SConscript('ImGui/SConstruct')

env.Append(CPPPATH=[Dir('./ImGuiColorTextEdit/')])

env.LIBS["thirdparty"] += SOURCES

