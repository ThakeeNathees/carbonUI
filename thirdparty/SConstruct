Import('env')

SOURCES = []

## compile libs
SConscript('glad/SConstruct')
SConscript('glfw/SConstruct')
SConscript('ImGui/SConstruct')

## glfw dependencies
env.Append(LIBS=['X11'])

## TODO: compile from source (live above)
